{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,

    "baseUrl": "./src",
    "paths": {
      "@components/*": ["renderer/components/*"],
      "@pages/*": ["renderer/pages/*"],
      "@shared/*": ["shared/*"]
    },

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*",
    "src/shared/types/MapaSaldoConta.ts",
    "src/shared/types/PlanoContaNode.ts",
    "src/main/services/EmpresaService.ts",
    "src/main/services/BalanceteContabilService.ts",
    "src/main/services/LancamentoContabilService.ts",
    "src/main/services/PlanoConciliacaoService.ts",
    "src/main/services/NaturezaService.ts",
    "src/main/services/PlanoContaService.ts"
  ]
}
